{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{% trans %}Provider{% endtrans %}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ provider.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ provider.name }}</td>
            </tr>
            <tr>
                <th>Hardware provider</th>
                <td>{{ provider.hardwareProvider }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('provider') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('provider_edit', { 'id': provider.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
